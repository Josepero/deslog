@model KuetOverflow.Models.SchoolViewModels.MessagesViewModel


<div id="row_Message">
    <div class="row">
        @foreach (var message in Model.Messages)
        {
            <div class="col-md-12">
                <span style=" @(@Model.Id == @message.To ? "text-align: left; background-color:gray; color:white; padding:5px 20px; border-radius:10px":"text-align: right;background-color: deepskyblue; color: white; float: right;padding:5px 20px; border-radius:10px;")">@message.Body</span>
            </div>
        }
    </div>
</div>
    <br/>
<div>
        <div class="form-horizontal">

            <div class="form-group">

                <div class="col-lg-6">
                    <div class="input-group">
                        <input type="text" id="message" class="form-control" placeholder="Say Something...">
                        <span class="input-group-btn">
                            <button type="submit" value="Create" class="btn btn-default" onclick="sent_message()">Send</button>
                        </span>
                    </div><!-- /input-group -->
                </div><!-- /.col-lg-6 -->

            </div>

        </div>
</div>
