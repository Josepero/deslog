@using Microsoft.AspNetCore.Identity
@using KuetOverflow.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="notification">
                <a href="#">
                    <i class="glyphicon glyphicon-globe" style="color: white"></i>
                    <span id="js-notifications-count" class="badge hide"></span>
                </a>
            </li>

            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">
                    <span style="color: white">Hello @UserManager.GetUserName(User)!</span>

                </a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">
                    <span style="color: white">Log Out</span>
                </button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">
                <span style="color: white">Register</span>
        </a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">
                <span style="color: white">Log in</span>
        </a></li>
    </ul>
}
