<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <base href="/" />
    <link rel="stylesheet" href="~/dist/vendor.css" asp-append-version="true" />
    <!-- stylesheets -->
    <link rel="stylesheet" type="text/css" href="~/theme.css">
    <link rel="stylesheet" type="text/css" href="~/animate.css">
    <!-- javascript -->
    <script src="~/jquery.min.js"></script>
    <script src="~/bootstrap.min.js"></script>
    <script src="~/theme.js"></script>
    <script src="~/js/Site.js"></script>
    

</head>

<body>
    <header class="navbar navbar-inverse hero" role="banner">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand">Kuet Overflow</a>
            </div>
            <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
                <ul class="nav navbar-nav navbar-right">

                    <ul class='nav navbar-nav'>
                        <li [routerLinkActive]="['link-active']">
                            <a href="/">
                                <span style="color: white" class='glyphicon glyphicon-home'></span> <span style="color: white">Home</span>
                            </a>
                        </li>

                        <li [routerLinkActive]="['link-active']">
                            <a href="courses/studentindex">
                                <span style="color: white" class='glyphicon glyphicon-education'></span> <span style="color: white">Students</span>
                            </a>
                        </li>

                        <li [routerLinkActive]="['link-active']">
                            <a href="/students">
                                <span style="color: white" class='glyphicon glyphicon-th-list'></span> <span style="color: white">Admin</span>
                            </a>
                        </li>
                    </ul>
                </ul>
            </nav>
        </div>
    </header>
@RenderBody()

@RenderSection("scripts", required: false)
</body>
</html>
