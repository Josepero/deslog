@using System.Collections.Generic
@model KuetOverflow.Models.SchoolViewModels.Activity

@{
    ViewData["Title"] = "Activity";
    Layout = "_StudentLayout";
}

<div>
    <div style="float: left">
        <img id="user-image-div" class="user-image" src="@Model.UserImage" />
    </div>
    <h2>@Model.UserName</h2>
</div>

<div class="row">
    <div class="col-md-6">
        <h3>Questions</h3>
        <ul>
            @foreach (var item in Model.Questions)
            {
                <li>
                    <a asp-controller="Questions" asp-action="Details" asp-route-id="@item.ID">
                        @item.Title
                    </a>
                </li>

            }
        </ul>
    </div>

    <div class="col-md-6">
        <h3>Answers</h3>

        <ul>
            @foreach (var item in Model.Answers)
            {
                <li>
                    <a asp-controller="Questions" asp-action="Details" asp-route-id="@item.QuestionID">
                        @item.Title
                    </a>
                </li>
            }
        </ul>
    </div>
</div>